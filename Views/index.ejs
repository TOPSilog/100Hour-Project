<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>100 Hour Project</title>

    <script src="https://kit.fontawesome.com/85b6c3303f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="nav">

    </nav>

    <main>
        <section>
            <h1>Task Manager</h1>
            <form action="/addItem" method="POST">
                <h3>Task Name</h3>
                <input type="text" placeholder="Name" name="taskName">
                <h3>Due Date</h3>
                <input type="date" placeholder="Task Due" name="taskDate">
                <h3>Task</h3>
                <textarea placeholder="Add Task" name="taskTask"></textarea>
                <input type="submit">
            </form>
        </section>

        <section>
            <h1>Let's Get It Done!</h1>
                <% for(let i=0; i < info.length; i++) {%>
                    <div class="currentTasks">
                        <h3><%= info[i].taskName %></h3>
                        <h4>Due Date: </h4><span><%= info[i].taskDate %></span>
                        <h4>Task: </h4><span><%= info[i].taskTask %></span>
                        <h5>Completed? <span><input type="checkbox"></span></h5>
                    </div>
                <% } %>
        </section>
    </main>
    
</body>
</html>